<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/glade_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

	<!-- Status bar -->
        <PreferenceScreen
                android:id="@+id/status_bar_settings"
                android:title="@string/status_bar_title"
                android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
                android:icon="@drawable/ic_settings_extdesk_hidenavbar"
                />

        <!-- Notification drawer -->
        <PreferenceScreen
                android:id="@+id/notification_drawer_settings"
                android:title="@string/notification_drawer_title"
                android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
                android:icon="@drawable/ic_settings_notification_drawer"
                />

        <!-- Network Traffic -->
        <PreferenceScreen
            android:key="network_traffic_state"
            android:fragment="com.android.settings.glade.NetworkTraffic"
            android:summary="@string/network_traffic_summary"
            android:title="@string/network_traffic_title"
            android:icon="@drawable/ic_control_network"
            />

        <!-- Wakelock blocker -->
        <PreferenceScreen
            android:key="wakelock_blocker"
            android:title="@string/wakelock_blocker_title"
            android:fragment="com.android.settings.glade.WakeLockBlocker"
            android:icon="@drawable/ic_glade_wakelock"
        />

</PreferenceScreen>
